{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "lib",
		"module": "commonjs",
		"target": "es6",
		"lib": ["es6", "dom"],
		"sourceMap": true,
		"jsx": "react",
		"moduleResolution": "node",
		"rootDir": "src/lib",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
    "removeComments": true,
    "declaration": true
	},
  "include": [
    "./src/lib/**/*.tsx",
    "./src/lib/**/*.ts"
  ],
	"exclude": [
    "tests",
		"node_modules"
	]
}
